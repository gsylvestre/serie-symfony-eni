<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, user-scalable=yes, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <title>Series!</title>
</head>
<body>
    <h1>testou</h1>
    <div>

        <div>{{ "+1 year"|date('Y') }}</div>

        {# crée une variable ! #}
        {% set name = "Guillaumeéê" %}
        <h2>{{ name|length }}</h2>

        {# crée un tableau #}
        {% set colors = ["orange", "brown", "turquoise", "blue"] %}

        <div>nombre de couleurs : {{ colors|length }}</div>
        <div>{{ colors|join(' / ') }}</div>

        {% for color in colors %}
            <div>{{ loop.last }}</div>
            <div style="background-color: {{ color }}">{{ color }}</div>
        {% endfor %}

        {# un objet #}
        {% set book = {
            title: 'Pifpaf',
            year: 2000,
            author: "John Doe"}
        %}
        <h3>{{ book.author }}</h3>
        <div>
            {% for key, val in book %}
                <div>{{ key }} : {{ val }}</div>
            {% endfor %}
        </div>
    </div>
</body>
</html>